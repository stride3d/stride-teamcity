    <build-runners>
      <runner id="RUNNER_45" name="Deploy documentation to Azure" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_noprofile" value="true" />
          <param name="jetbrains_powershell_script_code"><![CDATA[# Set the deployment folder 
$folder = "%deployment_folder%"
if(!$folder)
{
  $branch = "%teamcity.build.branch%"
  if ($branch -notmatch "^master-\d\.\d+")
  {
      Write-Host "You should specify the deployment folder or select a master branch."
      Write-Host "Cannot determine deployment folder for branch [$branch]."
      Write-Host "Branch name should be master-x.x for automatic deployment folder detection."
      exit 1;
  }
  $folder = $branch -replace "^master-(\d)\.(\d+)",'$1.$2'
}


# Deploy doc on the target
Write-Host Executing `'build/WAWSDeploy.exe xenko_doc.zip "%deployment_profile%" /v /t $folder /d /p %deployment_password%`'
build/WAWSDeploy.exe xenko_doc.zip "%deployment_profile%" /v /t $folder /d /p %deployment_password%]]></param>
          <param name="jetbrains_powershell_script_mode" value="CODE" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_44" name="" type="PurgeCloudflareCache">
        <parameters>
          <param name="CloudflareApiKey" value="zxx175d32bfa837dc7e" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Documentation_XenkoDocs" />
    </vcs-settings>
    <requirements />
    <build-triggers />
